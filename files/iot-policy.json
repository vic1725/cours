{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "iot:Publish"
      ],
      "Resource": [
        "arn:aws:iot:<REGION>:<TEMPLATE>:topic/$aws/things/<THING_NAME>/shadow/get",
        "arn:aws:iot:<REGION>:<TEMPLATE>:topic/$aws/things/<THING_NAME>/shadow/update"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Receive"
      ],
      "Resource": [
        "arn:aws:iot:<REGION>:<TEMPLATE>:topic/$aws/things/<THING_NAME>/shadow/get/accepted",
        "arn:aws:iot:<REGION>:<TEMPLATE>:topic/$aws/things/<THING_NAME>/shadow/get/rejected",
        "arn:aws:iot:<REGION>:<TEMPLATE>:topic/$aws/things/<THING_NAME>/shadow/update/accepted",
        "arn:aws:iot:<REGION>:<TEMPLATE>:topic/$aws/things/<THING_NAME>/shadow/update/rejected",
        "arn:aws:iot:<REGION>:<TEMPLATE>:topic/$aws/things/<THING_NAME>/shadow/update/delta"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Subscribe"
      ],
      "Resource": [
        "arn:aws:iot:<REGION>:<TEMPLATE>:topicfilter/$aws/things/<THING_NAME>/shadow/get/accepted",
        "arn:aws:iot:<REGION>:<TEMPLATE>:topicfilter/$aws/things/<THING_NAME>/shadow/get/rejected",
        "arn:aws:iot:<REGION>:<TEMPLATE>:topicfilter/$aws/things/<THING_NAME>/shadow/update/accepted",
        "arn:aws:iot:<REGION>:<TEMPLATE>:topicfilter/$aws/things/<THING_NAME>/shadow/update/rejected",
        "arn:aws:iot:<REGION>:<TEMPLATE>:topicfilter/$aws/things/<THING_NAME>/shadow/update/delta"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": "arn:aws:iot:<REGION>:<TEMPLATE>:client/test-*"
    }
  ]
}